{
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "moduleResolution": "nodenext", 
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "baseUrl": ".",                 
      "paths": {
        "@swiftness/*": ["pkg/*"],
        "*": ["node_modules/*"]
        }

    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  